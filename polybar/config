[bar/base]
override-redirect = false
wm-restack = i3
width = 100%
height = 32
offset-x = 0
offset-y = 0
fixed-center = true

overline-size = 2
overline-color = #f00
underline-size = 2
underline-color = ${colors.high}

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = Roboto-Regular:size=13:weight=bold
font-1 = FontAwesome:size=13
font-2 = siji:pixelsize=13;1


[bar/BarTop]
inherit = bar/base
modules-center = i3
modules-right = battery wlan isrunning-openvpn date 
modules-left = fsroot memory cpu temperature volume updates
tray-position = right
tray-padding = 2
tray-detached = false
tray-maxsize = 16
tray-transparent = false
tray-background = #ff0000

[bar/BarBottom]
inherit = bar/base
