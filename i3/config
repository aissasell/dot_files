### UI
# Set Font
font pango:Roboto-Regular 12
# thin borders

hide_edge_borders both

#Gaps
gaps inner 10
gaps outer 10

# Turn off mouse following
focus_follows_mouse no

# Turn off borders
for_window [class="^.*"] border pixel 1

#window colors
#                       border              background         text
#indicator
client.focused          $bg-color           $bg-color          $text-color #00ff00
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.focused_inactive $inactive-bg-color $inactive-bg-color  $inactive-text-color #00ff00
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color #00ff00

# Bar setup
bar {
	status_command polybar BarTop
	tray_output primary
	separator_symbol "//"
	strip_workspace_numbers yes

	position bottom
	mode invisible

	colors {
	   
	    background		$bg.color
	    statusline		$fg.color	
	    separator		$alt.color

	    #class		border		background	font
	    focused_workspace	$bg.color	$alt.color	$fg.color
	    inactive_workspace	$bg.color	$bg.color	$fg.color
	    active_workspace	$bg.color	$alt.color	$fg.color
	    urgent_workspace	$bg.color	$warn.color	ffffff
	}
}
bar {
	status_command polybar BarBottom
	tray_output primary
	separator_symbol "//"
	strip_workspace_numbers yes

	position bottom
	mode invisible

	colors {
	   
	    background		$bg.color
	    statusline		$fg.color	
	    separator		$alt.color

	    #class		border		background	font
	    focused_workspace	$bg.color	$alt.color	$fg.color
	    inactive_workspace	$bg.color	$bg.color	$fg.color
	    active_workspace	$bg.color	$alt.color	$fg.color
	    urgent_workspace	$bg.color	$warn.color	ffffff
	}
}
